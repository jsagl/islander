<!-- CARD -->

<% sumReview = 0 %>
<% sumRevenue = 0 %>
<% sumBooking = 0 %>
<% sumVisitors = 0 %>
<% my_islands.each do |island| %>
  <% sumBooking += island.bookings.all.count %>
  <% sumRevenue += island.bookings.all.sum(:total_price) %>
  <% sumVisitors += island.number_of_guests %>
  <% island.bookings.each do |booking|%>
    <% if booking.review %>
      <% sumReview += 1 %>
    <% end %>
  <% end %>
<% end %>


<div class="row clearfix">
  <div class="col-lg-3 col-md-6">
    <div class="card">
      <div class="body">
        <h3 class="m-b-0 number count-to" data-from="0" data-to="1600" data-speed="2000" data-fresh-interval="700"><%= sumReview %> <i class="zmdi zmdi-trending-up float-right"></i></h3>
        <p class="text-muted">New Feedbacks</p>
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="card">
      <div class="body">
        <h3 class="m-b-0"><%=sumRevenue  %><i class="zmdi zmdi-trending-up float-right"></i></h3>
        <p class="text-muted"> $ earn</p>
      </div>
    </div>
  </div>
  <div class="col-lg-3 col-md-6">
    <div class="card">
      <div class="body">
        <h3 class="m-b-0 number count-to" data-from="0" data-to="2105" data-speed="2000" data-fresh-interval="700"><%= sumBooking %> <i class="zmdi zmdi-trending-up float-right"></i>
        </h3>
        <p class="text-muted">Bookings</p>
      </div>
    </div>
  </div>
    <div class="col-lg-3 col-md-6">
      <div class="card">
        <div class="body">
          <h3 class="m-b-0 number count-to" data-from="0" data-to="2105" data-speed="2000" data-fresh-interval="700"><%= sumVisitors %><i class="zmdi zmdi-trending-up float-right"></i>
          </h3>
          <p class="text-muted">Visitors</p>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- DASHBOARD -->
<div class="carde bg-dark">
  <div class="row clearfix">
    <div class="col-lg-12">
      <div class="carde bg-dark">
        <div class="body">
          <!-- Nav tabs -->
          <ul class="nav nav-pills padding-0 justify-content-around">
            <li class="nav-item">
              <a class="nav-link active" id="global-tab-btn"data-toggle="tab" href="#global-view"> My Islands</a>
            </li>

            <li class="nav-item">
              <a class="nav-link" id="island-tab-btn"data-toggle="tab" href="#chart-view"> Booking on my islands</a>
            </li>
            <li class="nav-item">
              <a class="nav-link"
                id="booking-tab-btn" data-toggle="tab" href="#table-view">My bookings</a>
            </li>
          </ul>

        <!-- Tab panes -->

        <!-- Total islands -->
          <div class="tab-content m-t-10">
            <div class="tab-pane active" id="global-view">
              <div class="table-responsive">
                <table class="table m-b-5 table-hover">
                  <thead>
                    <tr>
                      <th class="text-center">Island</th>
                      <th class="text-center">Total Revenue</th>
                      <th class="text-center">Rating</th>
                      <th class="text-center">Update your Island</th>
                      <th class="text-center">Delete your Island</th>
                    </tr>
                  </thead>
                  <tbody>

                  <% my_islands.each do |island| %>
                      <tr>
                        <td class="text-center"><%=island.name  %></td>
                        <td class="text-center"><%=Booking.sum(:total_price) %></td>
                        <% if island.rating  %>
                          <td class="text-center"><%='%.1f' % island.rating%></span></td>
                        <% else %>
                          <td class="text-center"><%= "-" %></span></td>
                        <% end %>
                        <td class="text-center"><%= link_to edit_island_path(island), method: :delete, data: { confirm: "Are you sure?" } do %><i class="fas fa-edit"></i><% end %></td>
                        <td class="text-center"><%= link_to island_path(island), method: :delete, data: { confirm: "Are you sure?" } do %><i class="fas fa-trash"></i><% end %></td>
                      </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
        <!-- Booking on my islands -->
            <div class="tab-pane" id="table-view">
              <div class="table-responsive">
                <table class="table m-b-5 table-hover">
                  <thead>
                    <tr>
                      <th class="text-center">Island</th>
                      <th class="text-center">From</th>
                      <th class="text-center">To</th>
                      <th class="text-center">Price ($)</th>
                      <th class="text-center">Rate</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% my_bookings.each do |booking|%>
                      <tr>
                        <td class="text-center"><%=booking.island.name %></td>
                        <td class="text-center"><%=booking.start_date.strftime("%b %d, %Y")%></td>
                        <td class="text-center"><%=booking.end_date.strftime("%b %d, %Y")%></td>
                        <td class="text-center"><%=booking.total_price%></td>
                        <td class="text-center">
                          <%= render 'shared/reviewmodal', booking: booking %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
        <!-- My bookings -->
            <div class="tab-pane" id="chart-view">
              <div class="table-responsive">
                <table class="table m-b-5 table-hover">
                  <thead>
                    <tr>
                      <th class="text-center">Island</th>
                      <th class="text-center">Client</th>
                      <th class="text-center">From</th>
                      <th class="text-center">To</th>
                      <th class="text-center">Price ($)</th>
                      <th class="text-center">Review</th>
                      <th class="text-center">Cancel booking</th>
                    </tr>
                  </thead>
                  <tbody>

                  <% my_islands.each do |island| %>
                    <% island.bookings.each do |booking|%>
                      <tr>
                        <td class="text-center"><%=island.name  %></td>
                        <td class="text-center"><%=booking.user.first_name %></td>
                        <td class="text-center"><%=booking.start_date.strftime("%b %d, %Y")%></td>
                        <td class="text-center"><%=booking.end_date.strftime("%b %d, %Y")%></td>
                        <td class="text-center"><%=booking.total_price%></td>
                        <% if booking.review  %>
                          <td class="text-center"><%=booking.review.stars%> stars</span></td>
                        <% else %>
                          <td class="text-center badge badge-warning" id="not-reviewed"><%= "not reviewed yet" %></span></td>
                        <% end %>
                        <td class="text-center"><%= link_to booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } do %><i class="fas fa-trash"></i><% end %></td>
                      </tr>
                    <% end %>
                  <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>





