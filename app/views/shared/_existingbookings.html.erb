<div id="wrapper">
<table id="keywords" cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th><span>Island</span></th>
      <th><span>From</span></th>
      <th><span>To</span></th>
      <th><span>Price</span></th>
      <th><span>Actions</span></th>
    </tr>
  </thead>
  <tbody>
    <%@my_bookings.each do |booking|%>
      <tr>
        <td class="lalign"><%=booking.island.name %></td>
        <td><%=booking.start_date.strftime("%b %d, %Y")%></td>
        <td><%=booking.end_date.strftime("%b %d, %Y")%></td>
        <td><%=booking.total_price%></td>
        <td><%= link_to "Cancel", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }%> - <%= link_to "Rate my stay", new_booking_review_path(booking) %><i class="fas fa-trash"></i></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
