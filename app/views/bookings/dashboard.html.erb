<h4>The bookings on my islands</h4>
<ul>
  <% @my_islands.each do |island| %>
    <li><%= island.name %> - Rating: <%= island.rating %>
      <% if island.bookings != [] %>
        <div id="wrapper">
        <table id="keywords" cellspacing="0" cellpadding="0">
          <thead>
            <tr>
              <th><span>Name</span></th>
              <th><span>From</span></th>
              <th><span>To</span></th>
              <th><span>Price</span></th>
              <th><span>Actions</span></th>
            </tr>
          </thead>
          <tbody>
            <%island.bookings.each do |booking|%>
              <tr>
                <td class="lalign"><%=booking.user.first_name %></td>
                <td><%=booking.start_date.strftime("%b %d, %Y")%></td>
                <td><%=booking.end_date.strftime("%b %d, %Y")%></td>
                <td><%=booking.total_price%></td>
                <td><%= link_to "Cancel ", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }%> <i class="fas fa-trash"></i></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      <% end %>
    </li>
    <br>
    <br>
  <% end %>
</ul>

<h4>My current bookings:</h4>
<%= render 'shared/existingbookings' %>


