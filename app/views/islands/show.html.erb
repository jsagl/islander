<div class="container total">
  <div class="big-card d-flex">
    <!-- CARD TRIP -->
    <div class="card-trip col-xs-12 col-md-8 col-lg-6">
      <!-- CAROUSEL -->
      <%= render 'shared/carousel' %>
      <!-- INFO RECAP -->
      <div class="card-trip-infos">
        <div>
          <h2><%= @island.name %></h2>
          <h3><%= @island.title %></h3>
          <br>
          <br>
          <h4>About:</h4>
          <p><%=@island.description%></p>
          <br>
          <br>
          <div class="recap">
            <p style = "text-align:right;"><i class="fas fa-users"></i> <%=@island.number_of_guests%> guests max </p>

            <p style = "text-align:right;"><i class="fas fa-globe-americas"></i><%=@island.country%></p>

            <p style = "text-align:right;"><i class="fas fa-money-bill-wave"></i><%=@island.price_per_day%>   â‚¬ per day</p>
          </div>
        </div>

        <!-- ownerpics -->
        <img src='https://kitt.lewagon.com/placeholder/users/krokrob' class="card-trip-user avatar-bordered"/>
      </div>
    </div>

    <!-- CARD INFO -->
    <div class="card-info col-xs-12 col-md-4 col-lg-6">
      <!-- CARD MAP/METEO -->
      <%= render 'shared/map' %>
      <%= render 'shared/meteo' %>
      <%= render 'shared/booking' %>
    </div>
  </div>
</div>
<!-- REVIEWS CARDS -->
<div class="reviews col-xs-12">
    <h2 class="container">Reviews</h2>
    <h3><% @island.reviews.each do |review|%></h3>
      <div>
        <div class="d-flex">
          <%= "#{review.booking.user.first_name}" + ". " + "#{review.booking.user.last_name.first}" %>
          <p><%= review.created_at.strftime("%b %d, %Y") %></p>
        </div>
        <div style="margin-top: 16px;">
          <p class="review"><%=review.content%></p>
          <p><%=review.stars%></p>
        </div>
        <div style="margin-top: 24px; margin-bottom: 24px;">
          <div class="_7qp4lh"></div>
        </div>
      </div>
    <% end %>
</div>



