<h1></h1>
<h2>Book an Island</h2>
<div class="card-container">
  <%@islands.each do |island|%>
  <div class="card-island col-md-3">
    <h3><%=island.title%></h3>
    <h3><%=island.name%></h3>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path island.photo %>)">
    </div>


    <%=link_to "Know more about this island", island_path(island)%>
    <%#=image_tag("cocktail.jpg",width: 500) %>

  </div>
  <% end %>
  </div>
</div>
<p></p>
