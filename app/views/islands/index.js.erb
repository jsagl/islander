function scrollSearch() {
  const button = document.querySelector("#submit-search");
  button.addEventListener("click", (e) => {
    // e.preventDefault()
    document.querySelector('.home-island-cards').scrollIntoView({behavior: "smooth"});
  });
}

function refreshResult(islandsHTML) {
  const islandCards = document.querySelector('.home-island-cards')
  islandCards.innerHTML = islandsHTML
  scrollSearch()
}

refreshResult('<%= j render "search", islands: @islands%>');
