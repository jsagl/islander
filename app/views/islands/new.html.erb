<h1>Add my awesome island</h1>

<%= simple_form_for @island do |f| %>
  <%= f.input :name %>
  <%= f.input :country, collection: Island::COUNTRIES %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :number_of_guests %>
  <%= f.input :price_per_day %>
  <%#= f.input :photo %>
  <%#= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Confirm", class: "btn btn-primary" %>
<% end %>

<%= link_to "Cancel", islands_path, class: "btn btn-danger" %>
